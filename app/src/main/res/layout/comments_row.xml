<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentsrow_thumbimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/account_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentsrow_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="#000000"
        android:text="Full Name"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/commentsrow_dotsmenu"
        app:layout_constraintStart_toEndOf="@+id/commentsrow_thumbimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentsrow_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="#000000"
        android:text="Comment description"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/commentsrow_dotsmenu"
        app:layout_constraintStart_toEndOf="@+id/commentsrow_thumbimage"
        app:layout_constraintTop_toBottomOf="@+id/commentsrow_fullname" />

    <ImageView
        android:id="@+id/commentsrow_dotsmenu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/dots_menu_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>